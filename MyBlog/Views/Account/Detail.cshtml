@model MyBlog.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card p-5">
                <div class="card-header bg-danger text-white">
                    <h2 class="text-center">User Details</h2>
                </div>
                <div class="card-body">
                    <table class="table table-striped mx-auto">
                        <tr>
                            <th style="width: 30%">Username:</th>
                            <td>@Model.Username</td>
                        </tr>
                        <tr>
                            <th>Name:</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <th>Role:</th>
                            <td>@Model.Role</td>
                        </tr>
                        <tr>
                            <th>Alamat:</th>
                            <td>@Model.Alamat</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>No Telepon:</th>
                            <td>@Model.NoTelepon</td>
                        </tr>
                        <tr>
                            <th>Tanggal Lahir:</th>
                            <td>@Model.TanggalLahir</td>
                        </tr>
                    </table>
                    <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Index" >Back</a>
                </div>
            </div>
        </div>
    </div>
</div>
